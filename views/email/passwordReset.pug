extends baseEmail

block content
  p Hello Again #{firstName},
  p Forgot your password? Submit this verification code and then reset the new password.
  h4 verification code is:
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href='') #{code}
  p If you didn't forget your password, please ignore this email!
